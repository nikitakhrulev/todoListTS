{
    "compilerOptions": {
      "outDir": "./public/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
    },
    "exclude": ["node_modules", "/*.spec.ts", "/*.test.ts"],
    "include": ["src", "index.d.ts"]
}